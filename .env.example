# Gemini API (optional - for AI features)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_SANDBOX=true

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Firebase Client SDK (these will be exposed to the browser)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Master Invite Code (for bootstrap - disable in production)
MASTER_INVITE_CODE=TESTCODE123

# Admin Users (optional)
# Comma-separated list of Firebase user IDs who should have admin access
# Alternatively, set isAdmin: true in the user's Firestore document
# Admin users can access /admin dashboard for platform management
ADMIN_USER_IDS=

# Sentry Error Monitoring (optional but recommended for production)
# Get these values from https://sentry.io
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ORG=your-sentry-organization
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Vercel KV (Redis) for distributed rate limiting
# Create a KV store in your Vercel project dashboard
# These are automatically populated by Vercel when KV is linked
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
# KV_REST_API_READ_ONLY_TOKEN=
